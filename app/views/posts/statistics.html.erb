<div class="row">
    <div class="col-sm-12 text-xs-center">
        <table id="myTable">
         <thead>
          <tr>
            <th>Account</th>
            <th>Number of Posts posted</th>
            <th>Number of Posts in DB</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |k,v| %>
          <tr>
            <td><%= k %></td>
            <td><%= v.collect{|s| s.posted_by}.flatten.count %></td>
            <td><%= Post.where(:account => k).count %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
    </div>
</div>
<script>
$(document).ready(function(){
    $('#myTable').DataTable({paging: false, searching: false});
});
</script>